$( document ).ready(function() {



   if  (<%= @condition == false %>) {
    unfilter();
    $('.no-seed').hide();
    $('.seed-presentation').prepend("<p class= 'no-seed'>Pas de seed pour la catégorie sélectionnée</p>");
    $('.sub-title.<%= @filter %>').toggleClass("inactive");


   } else {
    unfilter();
    $('.no-seed').hide();
    $('.product').hide();
    $('.product.id-<%= @filter %>').toggleClass("filtered");
    $('.filtered').show();
    $('.sub-title.<%= @filter %>').toggleClass("inactive");
  }

});


function unfilter() {
  $(".fa.fa-toggle-on").removeClass("hidden")
}














